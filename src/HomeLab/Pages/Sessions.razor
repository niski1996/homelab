    private async Task FilterSessions()
    {
        await Task.Delay(1); // Force async
        
        filteredSessions = sessions.Where(s =>
        {
            bool matchesStatus = string.IsNullOrEmpty(statusFilter) || 
                               (statusFilter == "Completed" ? s.IsCompleted : !s.IsCompleted);
            bool matchesTemplate = string.IsNullOrEmpty(templateFilter) || 
                                 (s.WorkoutTemplate?.Name?.Contains(templateFilter, StringComparison.OrdinalIgnoreCase) ?? false);
            
            bool matchesDate = true;
            if (!string.IsNullOrEmpty(dateFilter))
            {
                var now = DateTime.Now;
                matchesDate = dateFilter switch
                {
                    "today" => s.SessionDate.Date == now.Date,
                    "week" => s.SessionDate >= now.AddDays(-7),
                    "month" => s.SessionDate >= now.AddDays(-30),
                    _ => true
                };
            }
            
            return matchesStatus && matchesTemplate && matchesDate;
        }).ToList();
    }

